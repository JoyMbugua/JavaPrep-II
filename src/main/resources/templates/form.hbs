{{#partial "title"}}
    Create a Custom Greeting!
{{/partial}}

{{#partial "content"}}
    <h1>Cheery Greetings!</h1>
    <p>Fill in your name and your friend's name to create your custom greeting!</p>
    <form action="/greeting_card">
        <div class="form-group">
            <label for="sender">Your Name</label>
            <input type="text" id="sender" name="sender" class="form-control">
        </div>
        <div class="form-group">
            <label for="recipient">Your Friend's Name</label>
            <input type="text" id="recipient" name="recipient" class="form-control">
        </div>
        <button type="submit" class="btn">Go!</button>
    </form>
{{/partial}}
{{> layout.hbs}}